    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "rollup": "^2.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^5.0.0",
    "vite": "^4.3.0"
